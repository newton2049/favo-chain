# Production Environment Configuration
# 生产环境配置
# ⚠️ WARNING: Handle with extreme care - this configuration affects live network

# Network Configuration
CHAIN_ID=51000
NETWORK_NAME=favo-chain-mainnet
CONSENSUS=ibft  # or favobft

# Block Configuration
BLOCK_GAS_LIMIT=30000000
EPOCH_SIZE=1000
BLOCK_TIME=2s

# Logging - Use WARN or ERROR in production for performance
LOG_LEVEL=WARN

# Pre-mine accounts - Production accounts
# CRITICAL: Ensure these are controlled by secure multi-sig wallets
PREMINE_ACCOUNTS=

# Secrets - NEVER use insecure mode in production
SECRETS_INSECURE=false
# REQUIRED: Use secure secret management
# SECRETS_MANAGER=hashicorp-vault
# SECRETS_MANAGER=aws-ssm

# Ports
JSONRPC_PORT=8545
GRPC_PORT=9632
LIBP2P_PORT=1478
PROMETHEUS_PORT=5001

# Performance & Security
NUM_BLOCK_CONFIRMATIONS=12
MAX_PEERS=100
MAX_INBOUND_PEERS=50
MAX_OUTBOUND_PEERS=50
PRICE_LIMIT=1000000000  # 1 Gwei minimum gas price

# Features
PROMETHEUS_ENABLED=true
SEAL_ENABLED=true

# AWS Configuration (if using AWS)
AWS_REGION=us-east-1
# AWS_ROLE_ARN=arn:aws:iam::ACCOUNT_ID:role/favo-chain-production-role

# S3 Artifact Bucket
# FAVO_EDGE_ARTIFACT_BUCKET=favo-chain-artifacts-production

# ECR Repository
# ECR_REPOSITORY=library/favo-chain

# Auto-Scaling Groups (comma-separated)
# VALIDATOR_ASGS=validator-1-asg,validator-2-asg,validator-3-asg,validator-4-asg

# Monitoring & Alerting
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx
# DATADOG_API_KEY=xxx
# PAGERDUTY_API_KEY=xxx

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
# BACKUP_S3_BUCKET=favo-chain-backups-production

# TLS/SSL (Recommended for all external endpoints)
TLS_ENABLED=true
# TLS_CERT_FILE=/etc/ssl/certs/favo-chain.crt
# TLS_KEY_FILE=/etc/ssl/private/favo-chain.key

# Rate Limiting (JSON-RPC)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_SECOND=100
RATE_LIMIT_BURST=200
