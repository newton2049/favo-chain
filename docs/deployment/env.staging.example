# Staging/Test Environment Configuration
# 测试环境配置

# Network Configuration
CHAIN_ID=51002
NETWORK_NAME=favo-chain-staging
CONSENSUS=ibft  # or favobft

# Block Configuration
BLOCK_GAS_LIMIT=20000000
EPOCH_SIZE=100
BLOCK_TIME=2s

# Logging
LOG_LEVEL=INFO

# Pre-mine accounts (staging - test accounts only)
# Use your staging test accounts here
PREMINE_ACCOUNTS=

# Secrets - Do NOT use insecure mode in staging
SECRETS_INSECURE=false
# Use AWS Secrets Manager or HashiCorp Vault
# SECRETS_MANAGER=aws-ssm
# SECRETS_MANAGER=hashicorp-vault

# Ports
JSONRPC_PORT=8545
GRPC_PORT=9632
LIBP2P_PORT=1478
PROMETHEUS_PORT=5001

# Performance
NUM_BLOCK_CONFIRMATIONS=2
MAX_PEERS=50
MAX_INBOUND_PEERS=25
MAX_OUTBOUND_PEERS=25

# Features
PROMETHEUS_ENABLED=true
SEAL_ENABLED=true

# AWS Configuration (if using AWS)
AWS_REGION=us-east-1
# AWS_ROLE_ARN=arn:aws:iam::ACCOUNT_ID:role/favo-chain-staging-role

# S3 Artifact Bucket
# FAVO_EDGE_ARTIFACT_BUCKET=favo-chain-artifacts-staging

# ECR Repository
# ECR_REPOSITORY=library/favo-chain

# Auto-Scaling Groups (comma-separated)
# VALIDATOR_ASGS=validator-1-asg,validator-2-asg,validator-3-asg,validator-4-asg

# Load Testing
# LOADTEST_RPC_URL=https://rpc.staging.favo.network/
